<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My charts | DankaguLike EN Server</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@1.0.2/css/bulma.min.css">
  <link rel="stylesheet" href="/profile_charts.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
    integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<body class="has-navbar-fixed-top">
  <!-- Include the navbar -->
  <%- include('templates/template_navbar.ejs') %>

  <div class="container">
    <div class="header">
      <h1>My charts</h1>
      <button class="button is-primary">
        <span class="icon is-small">
          <i class="fas fa-plus"></i>
        </span>
        <span>Add new chart</span>
      </button>
    </div>
    <hr>
    <div>
      <div class="chart-cards">
        <!-- Example Chart Card 1 -->
        <div class="chart-card">
          <div class="chart-card-title-container">
            <p class="chart-card-title">Chart 1</p>
            <span class="chart-card-tag">
              Song
              <i class="fas fa-code"></i>
            </span>
          </div>
          <p class="chart-card-publisher">By: <span class="chart-card-publisher-name">WickyPlays</span></p>
          <p class="chart-card-desc">Description goes here</p>
          <div class="chart-card-diff">
            <span class="chart-card-diff-node diff-easy">0</span>
            <span class="chart-card-diff-node diff-normal">0</span>
            <span class="chart-card-diff-node diff-hard">0</span>
            <span class="chart-card-diff-node diff-extra">0</span>
            <span class="chart-card-diff-node diff-lunatic">0</span>
          </div>
          <div class="chart-card-actions">
            <button class="button is-small is-primary">
              <span class="icon">
                <i class="fas fa-arrow-circle-down"></i>
              </span>
              <span>Download</span>
            </button>
            <div class="chart-card-stats">
              <span class="icon-text">
                <span class="icon">
                  <i class="fas fa-thumbs-up"></i>
                </span>
                <span>0</span>
              </span>
            </div>
            <!-- Delete Button -->
            <button class="button is-small is-danger delete-button" data-id="1">
              <span class="icon">
                <i class="fas fa-trash"></i>
              </span>
            </button>
          </div>
        </div>

        <!-- Example Chart Card 2 -->
        <div class="chart-card">
          <div class="chart-card-title-container">
            <p class="chart-card-title">Chart 2</p>
            <span class="chart-card-tag">
              Song
              <i class="fas fa-code"></i>
            </span>
          </div>
          <p class="chart-card-publisher">By: <span class="chart-card-publisher-name">WickyPlays</span></p>
          <p class="chart-card-desc">Description goes here</p>
          <div class="chart-card-diff">
            <span class="chart-card-diff-node diff-easy">0</span>
            <span class="chart-card-diff-node diff-normal">0</span>
            <span class="chart-card-diff-node diff-hard">0</span>
            <span class="chart-card-diff-node diff-extra">0</span>
            <span class="chart-card-diff-node diff-lunatic">0</span>
          </div>
          <div class="chart-card-actions">
            <button class="button is-small is-primary">
              <span class="icon">
                <i class="fas fa-arrow-circle-down"></i>
              </span>
              <span>Download</span>
            </button>
            <div class="chart-card-stats">
              <span class="icon-text">
                <span class="icon">
                  <i class="fas fa-thumbs-up"></i>
                </span>
                <span>0</span>
              </span>
            </div>
            <!-- Delete Button -->
            <button class="button is-small is-danger delete-button" data-id="2">
              <span class="icon">
                <i class="fas fa-trash"></i>
              </span>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Confirmation Modal -->
  <div class="modal" id="confirmationModal">
    <div class="modal-background"></div>
    <div class="modal-card">
      <header class="modal-card-head">
        <p class="modal-card-title">Confirm Deletion</p>
        <button class="delete" aria-label="close" id="closeModal"></button>
      </header>
      <section class="modal-card-body">
        Are you sure you want to delete this chart?
      </section>
      <footer class="modal-card-foot">
        <button class="button is-danger" id="confirmDelete">Delete</button>
        <button class="button" id="cancelDelete">Cancel</button>
      </footer>
    </div>
  </div>

  <script src="/js/profile_charts.js"></script>
</body>

</html>